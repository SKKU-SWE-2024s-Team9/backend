generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id        Int     @id @default(autoincrement())
    name      String
    password  String
    salt      String
    group     Group   @relation(fields: [groupId], references: [id])
    groupId   Int     @unique
    activated Boolean

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Group {
    id          Int     @id @default(autoincrement())
    name        String
    logoUrl     String
    description String
    email       String
    homepageUrl String
    tags        String
    approved    Boolean
    User        User?
    Lab         Lab?
    Club        Club?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Lab {
    group   Group @relation(fields: [groupId], references: [id])
    groupId Int   @unique

    professor        String
    numPostDoc       Int
    numPhd           Int
    numMaster        Int
    numUnderGraduate Int
    campus           String
    roomNo           String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Club {
    group    Group  @relation(fields: [groupId], references: [id])
    groupId  Int    @unique
    campus   String
    location String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
